{% comment %}
  Facebook Open Graph meta tags
{% endcomment %}

<meta name="author" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:site_name" content="{{ shop.name }}">

{% if template contains 'product' %}
  {%- comment %}<locksmith:3a2d>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="product">{% endif -%}
    {%- comment %}original: <meta property="og:type" content="product">{%- endcomment %}
  {%- comment %}</locksmith:3a2d>{% endcomment -%}
  {%- comment %}<locksmith:14d5>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ product.title | strip_html | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:title" content="{{ product.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:14d5>{% endcomment -%}
  {% for image in product.images limit:3 %}
    {%- comment %}<locksmith:78d9>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ image.src | product_img_url: '600x' }}">{% endif -%}
      {%- comment %}original: <meta property="og:image" content="http:{{ image.src | product_img_url: '600x' }}">{%- endcomment %}
    {%- comment %}</locksmith:78d9>{% endcomment -%}
    {%- comment %}<locksmith:bd82>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ image.src | product_img_url: '600x' }}">{% endif -%}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ image.src | product_img_url: '600x' }}">{%- endcomment %}
    {%- comment %}</locksmith:bd82>{% endcomment -%}
    {% if image.alt contains 'youtube' or image.alt contains 'vimeo' %}
      {% assign src = image.alt | split: 'src="' %}
      {% assign src = src[1] | split: '"' | first %}
      <meta property="og:video" content="{{ src }}">
    {% endif %}
  {% endfor %}
  {%- comment %}<locksmith:ce3a>{% endcomment -%}
    {%- include 'locksmith-variables' %}{% if locksmith_access_granted %}<meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:ce3a>{% endcomment -%}
  {%- comment %}<locksmith:6a7c>{% endcomment -%}
    {%- include 'locksmith-variables' %}{% if locksmith_access_granted %}<meta property="og:price:currency" content="{{ shop.currency }}">{% endif -%}
    {%- comment %}original: <meta property="og:price:currency" content="{{ shop.currency }}">{%- endcomment %}
  {%- comment %}</locksmith:6a7c>{% endcomment -%}
{% elsif template contains 'collection' %}
  {%- comment %}<locksmith:228f>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="product.group">{% endif -%}
    {%- comment %}original: <meta property="og:type" content="product.group">{%- endcomment %}
  {%- comment %}</locksmith:228f>{% endcomment -%}
  {%- comment %}<locksmith:7a46>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ collection.title | strip_html | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:title" content="{{ collection.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:7a46>{% endcomment -%}
  {% if collection.products_count > 0 %}
    {% assign image = collection.products.first.featured_image %}
    {%- comment %}<locksmith:1024>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ image.src | product_img_url: '600x' }}">{% endif -%}
      {%- comment %}original: <meta property="og:image" content="http:{{ image.src | product_img_url: '600x' }}">{%- endcomment %}
    {%- comment %}</locksmith:1024>{% endcomment -%}
    {%- comment %}<locksmith:eb03>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ image.src | product_img_url: '600x' }}">{% endif -%}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ image.src | product_img_url: '600x' }}">{%- endcomment %}
    {%- comment %}</locksmith:eb03>{% endcomment -%}
  {% endif %}
{% elsif template contains 'article' %}
  {%- comment %}<locksmith:24e6>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="article">{% endif -%}
    {%- comment %}original: <meta property="og:type" content="article">{%- endcomment %}
  {%- comment %}</locksmith:24e6>{% endcomment -%}
  {%- comment %}<locksmith:171a>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ article.title | strip_html | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:title" content="{{ article.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:171a>{% endcomment -%}
  {% assign img_tag = '<' | append: 'img' %}
  {% if article.image %}
    {%- comment %}<locksmith:4816>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ article.image | img_url: '600x' }}">{% endif -%}
      {%- comment %}original: <meta property="og:image" content="http:{{ article.image | img_url: '600x' }}">{%- endcomment %}
    {%- comment %}</locksmith:4816>{% endcomment -%}
    {%- comment %}<locksmith:ae5e>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ article.image | img_url: '600x' }}">{% endif -%}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ article.image | img_url: '600x' }}">{%- endcomment %}
    {%- comment %}</locksmith:ae5e>{% endcomment -%}
  {% elsif article.content contains img_tag %}
    {% assign src = article.content | split: 'src="' %}
    {% assign src = src[1] | split: '"' | first | remove: 'https:' | remove: 'http:' %}
    {% if src %}
      {%- comment %}<locksmith:69ef>{% endcomment -%}
        {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ src }}">{% endif -%}
        {%- comment %}original: <meta property="og:image" content="http:{{ src }}">{%- endcomment %}
      {%- comment %}</locksmith:69ef>{% endcomment -%}
      {%- comment %}<locksmith:b89c>{% endcomment -%}
        {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ src }}">{% endif -%}
        {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ src }}">{%- endcomment %}
      {%- comment %}</locksmith:b89c>{% endcomment -%}
    {% endif %}
  {% endif %}
{% elsif template contains 'blog' %}
  {%- comment %}<locksmith:c22f>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="article">{% endif -%}
    {%- comment %}original: <meta property="og:type" content="article">{%- endcomment %}
  {%- comment %}</locksmith:c22f>{% endcomment -%}
  {%- comment %}<locksmith:367a>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ blog.title | strip_html | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:title" content="{{ blog.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:367a>{% endcomment -%}
  {% if blog.articles_count > 0 %}
    {% assign article = blog.articles.first %}
    {% assign img_tag = '<' | append: 'img' %}
    {% if article.image %}
      {%- comment %}<locksmith:1d28>{% endcomment -%}
        {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ article.image | img_url: '600x' }}">{% endif -%}
        {%- comment %}original: <meta property="og:image" content="http:{{ article.image | img_url: '600x' }}">{%- endcomment %}
      {%- comment %}</locksmith:1d28>{% endcomment -%}
      {%- comment %}<locksmith:e980>{% endcomment -%}
        {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ article.image | img_url: '600x' }}">{% endif -%}
        {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ article.image | img_url: '600x' }}">{%- endcomment %}
      {%- comment %}</locksmith:e980>{% endcomment -%}
    {% elsif article.content contains img_tag %}
      {% assign src = article.content | split: 'src="' %}
      {% assign src = src[1] | split: '"' | first | remove: 'https:' | remove: 'http:' %}
      {% if src %}
        {%- comment %}<locksmith:3093>{% endcomment -%}
          {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ src }}">{% endif -%}
          {%- comment %}original: <meta property="og:image" content="http:{{ src }}">{%- endcomment %}
        {%- comment %}</locksmith:3093>{% endcomment -%}
        {%- comment %}<locksmith:bd17>{% endcomment -%}
          {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ src }}">{% endif -%}
          {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ src }}">{%- endcomment %}
        {%- comment %}</locksmith:bd17>{% endcomment -%}
      {% endif %}
    {% endif %}
  {% endif %}
{% elsif template contains 'page' %}
  {%- comment %}<locksmith:6a15>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="article">{% endif -%}
    {%- comment %}original: <meta property="og:type" content="article">{%- endcomment %}
  {%- comment %}</locksmith:6a15>{% endcomment -%}
  {%- comment %}<locksmith:31bf>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ page.title | strip_html | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:title" content="{{ page.title | strip_html | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:31bf>{% endcomment -%}
  {% assign img_tag = '<' | append: 'img' %}
  {% if page.content contains img_tag %}
    {% assign src = page.content | split: 'src="' %}
    {% assign src = src[1] | split: '"' | first | remove: 'https:' | remove: 'http:' %}
    {% if src %}
      {%- comment %}<locksmith:3c11>{% endcomment -%}
        {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ src }}">{% endif -%}
        {%- comment %}original: <meta property="og:image" content="http:{{ src }}">{%- endcomment %}
      {%- comment %}</locksmith:3c11>{% endcomment -%}
      {%- comment %}<locksmith:088a>{% endcomment -%}
        {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ src }}">{% endif -%}
        {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ src }}">{%- endcomment %}
      {%- comment %}</locksmith:088a>{% endcomment -%}
    {% endif %}
  {% endif %}
{% else %}
  {%- comment %}<locksmith:addc>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:type" content="website">{% endif -%}
    {%- comment %}original: <meta property="og:type" content="website">{%- endcomment %}
  {%- comment %}</locksmith:addc>{% endcomment -%}
  {%- comment %}<locksmith:de4a>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:title" content="{{ page_title | escape }}">{% endif -%}
    {%- comment %}original: <meta property="og:title" content="{{ page_title | escape }}">{%- endcomment %}
  {%- comment %}</locksmith:de4a>{% endcomment -%}
  {% if settings.use_logo %}
    {%- comment %}<locksmith:3f52>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image" content="http:{{ 'logo.png' | asset_url }}">{% endif -%}
      {%- comment %}original: <meta property="og:image" content="http:{{ 'logo.png' | asset_url }}">{%- endcomment %}
    {%- comment %}</locksmith:3f52>{% endcomment -%}
    {%- comment %}<locksmith:9072>{% endcomment -%}
      {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}">{% endif -%}
      {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}">{%- endcomment %}
    {%- comment %}</locksmith:9072>{% endcomment -%}
  {% endif %}
{% endif %}
{% if page_description %}
  {%- comment %}<locksmith:b07a>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta property="og:description" content="{{ page_description | escape | replace: 'Description', '' | replace: 'Specs', '' | replace: 'Shipping', '' | replace: 'Size', '' }}">{% endif -%}
    {%- comment %}original: <meta property="og:description" content="{{ page_description | escape | replace: 'Description', '' | replace: 'Specs', '' | replace: 'Shipping', '' | replace: 'Size', '' }}">{%- endcomment %}
  {%- comment %}</locksmith:b07a>{% endcomment -%}
{% endif %}

{% comment %}
  Twitter user name of the site, based on theme settings
{% endcomment %}
{% if settings.twitter_username != blank %}
  <meta name="twitter:site" content="@{{ settings.twitter_username }}">
{% endif %}
<meta name="twitter:card" content="summary">
{% if template contains 'product' %}
  {%- comment %}<locksmith:2055>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta name="twitter:title" content="{{ product.title }}">{% endif -%}
    {%- comment %}original: <meta name="twitter:title" content="{{ product.title }}">{%- endcomment %}
  {%- comment %}</locksmith:2055>{% endcomment -%}
  {%- comment %}<locksmith:4053>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta name="twitter:description" content="{{ page_description | escape | replace: 'Description', '' | replace: 'Specs', '' | replace: 'Shipping', '' | replace: 'Size', '' }}">{% endif -%}
    {%- comment %}original: <meta name="twitter:description" content="{{ page_description | escape | replace: 'Description', '' | replace: 'Specs', '' | replace: 'Shipping', '' | replace: 'Size', '' }}">{%- endcomment %}
  {%- comment %}</locksmith:4053>{% endcomment -%}
  {%- comment %}<locksmith:15cb>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta name="twitter:image" content="https:{{ product.featured_image.src | img_url: 'medium' }}">{% endif -%}
    {%- comment %}original: <meta name="twitter:image" content="https:{{ product.featured_image.src | img_url: 'medium' }}">{%- endcomment %}
  {%- comment %}</locksmith:15cb>{% endcomment -%}
  {%- comment %}<locksmith:8c03>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta name="twitter:image:width" content="240">{% endif -%}
    {%- comment %}original: <meta name="twitter:image:width" content="240">{%- endcomment %}
  {%- comment %}</locksmith:8c03>{% endcomment -%}
  {%- comment %}<locksmith:2952>{% endcomment -%}
    {%- include 'locksmith-variables', locksmith_hiding_scope: 'resource' %}{% if locksmith_transparent %}<meta name="twitter:image:height" content="240">{% endif -%}
    {%- comment %}original: <meta name="twitter:image:height" content="240">{%- endcomment %}
